FROM ubuntu:22.04

# Install necessary packages
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    wget \
    jq \
    openssl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Download and install CockroachDB from Oxide's Buildomat
RUN ARCH=amd64 && \
    COMMIT_HASH=865aff1595e494c2ce95030c7a2f20c4370b5ff8 && \
    mkdir -p /tmp/cockroach && \
    wget -qO- "https://buildomat.eng.oxide.computer/public/file/oxidecomputer/cockroach/linux-${ARCH}/${COMMIT_HASH}/cockroach.tgz" | tar xvz -C /tmp/cockroach && \
    mv /tmp/cockroach/cockroach /usr/local/bin/cockroach && \
    chmod +x /usr/local/bin/cockroach && \
    rm -rf /tmp/cockroach

# Copy startup and certificate management scripts
COPY scripts/cockroach-start.sh /usr/local/bin/start-cockroach.sh
COPY scripts/fetch-certificates.sh /usr/local/bin/fetch-certificates.sh
COPY scripts/renew-certificates.sh /usr/local/bin/renew-certificates.sh
COPY scripts/cockroach-health.sh /usr/local/bin/cockroach-health.sh
RUN chmod +x /usr/local/bin/start-cockroach.sh \
             /usr/local/bin/fetch-certificates.sh \
             /usr/local/bin/renew-certificates.sh \
             /usr/local/bin/cockroach-health.sh

# Create directories
RUN mkdir -p /cockroach/cockroach-data /cockroach/certs

# Set the entrypoint to our startup script
ENTRYPOINT ["/usr/local/bin/start-cockroach.sh"]
