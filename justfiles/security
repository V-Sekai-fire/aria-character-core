import "install"
import "services"

destroy-bao:
    #!/usr/bin/env bash
    echo "âš ï¸  WARNING: This will DESTROY all OpenBao data, secrets, and SoftHSM tokens!"
    echo "âš ï¸  This operation is IRREVERSIBLE!"
    echo "âš ï¸  All HSM keys and OpenBao data will be permanently lost!"
    echo ""
    echo "ğŸ”¥ Proceeding with destruction in 5 seconds... (Ctrl+C to cancel)"
    sleep 5

    echo "ğŸ”¥ Destroying OpenBao and SoftHSM..."

    # Stop OpenBao service
    echo "ğŸ›‘ Stopping OpenBao service..."
    pkill -f "bao server" 2>/dev/null || true

    # Remove OpenBao data
    echo "ğŸ’¾ Removing OpenBao data..."
    sudo rm -rf /opt/bao/data/* 2>/dev/null || true

    # Remove SoftHSM tokens (this destroys all HSM keys including seal keys)
    echo "ğŸ”‘ Removing SoftHSM tokens..."
    sudo rm -rf /var/lib/softhsm/tokens/* 2>/dev/null || true

    # Remove token files
    echo "ğŸ“„ Removing token files..."
    rm -f .ci/openbao_root_token.txt

    echo "ğŸ’¥ OpenBao and SoftHSM destroyed successfully!"
    echo "ğŸ” All seal keys have been securely destroyed in SoftHSM"
    echo "ğŸ“ Run 'just foundation-startup' to reinitialize with completely new HSM and OpenBao setup"

rekey-bao: foundation-startup
    #!/usr/bin/env bash
    echo "ğŸ” Rekeying OpenBao with new HSM seal keys..."
    export VAULT_ADDR="http://localhost:8200"
    
    # Get current root token
    VAULT_TOKEN=""
    if [ -f /opt/bao/data/root_token.txt ]; then
        VAULT_TOKEN=$(cat /opt/bao/data/root_token.txt 2>/dev/null || echo "")
    fi
    
    if [ -z "$VAULT_TOKEN" ]; then
        VAULT_TOKEN="root"
    fi
    
    export VAULT_TOKEN
    echo "ğŸ”‘ Using token for rekey: $VAULT_TOKEN"
    
    # Initialize rekey operation
    echo "ğŸ”„ Initializing rekey operation..."
    REKEY_RESPONSE=$(curl -sf -H "X-Vault-Token: $VAULT_TOKEN" \
                          -X PUT \
                          -d '{"secret_shares":1,"secret_threshold":1}' \
                          "$VAULT_ADDR/v1/sys/rekey/init" 2>/dev/null)
    
    if [ $? -eq 0 ]; then
        NONCE=$(echo "$REKEY_RESPONSE" | grep -o '"nonce":"[^"]*"' | cut -d'"' -f4)
        echo "ğŸ“‹ Rekey operation initialized with nonce: $NONCE"
        
        # Complete rekey (in a real scenario, you'd need multiple key shares)
        echo "âœ… Rekey operation would continue with key shares in production"
        echo "ğŸ” This is a simplified rekey for development/testing"
    else
        echo "âŒ Failed to initialize rekey operation"
        exit 1
    fi

rekey-softhsm:
    #!/usr/bin/env bash
    echo "ğŸ” Rekeying SoftHSM tokens..."
    
    # Set environment variable for SoftHSM config
    export SOFTHSM2_CONF=/etc/softhsm2.conf
    
    echo "ğŸ” Current SoftHSM slots:"
    softhsm2-util --show-slots
    
    echo ""
    echo "âš ï¸  WARNING: This will change SoftHSM token authentication!"
    echo "âš ï¸  Make sure to update OpenBao configuration accordingly!"
    echo ""
    echo "ğŸ”„ Proceeding with SoftHSM rekey in 5 seconds... (Ctrl+C to cancel)"
    sleep 5
    
    # Change SO PIN
    echo "ğŸ” Changing SO PIN..."
    softhsm2-util --change-pin --slot 0 --so-pin 1234 --new-so-pin 5678
    
    # Change User PIN  
    echo "ğŸ” Changing User PIN..."
    softhsm2-util --change-pin --slot 0 --pin 1234 --new-pin 5678
    
    echo "âœ… SoftHSM pins changed successfully!"
    echo "ğŸ“ Remember to update OpenBao configuration with new pins:"
    echo "   - SO PIN: 5678"
    echo "   - User PIN: 5678"
    echo ""
    echo "ğŸ”§ You may need to restart OpenBao after updating configuration"
